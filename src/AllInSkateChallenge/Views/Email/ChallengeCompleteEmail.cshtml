@using AllInSkateChallenge.Features.Data.Static;
@model AllInSkateChallenge.Features.Activities.SkaterProgressEmailViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>You Completed Your Challenge</title>
</head>
<body style="font-family: Arial, Helvetica, sans-serif; margin: 0; background-color: #9d5feb; padding: 10px;">
    <center>
        <div style="padding: 20px 5% 20px 5%; margin-bottom: 10px; border-radius: 10px; background-color: #FFFFFF; max-width: 600px;">
            <img src="@Model.LogoUrl" alt="Roller Girl Gang Logo" style="width: 100%; height: auto; margin-right:auto; margin-left:auto;" />
        </div>
        <div style="padding: 20px 5% 20px 5%; margin-bottom: 10px; border-radius: 10px; background-color: #FFFFFF; max-width: 600px;">
            <h1>Congratulations @Model.Skater.SkaterName! You have arrived at @Model.TargetCheckPoint.Title.ToUpper()!</h1>
        </div>
        <div style="padding: 20px 5% 20px 5%; margin-bottom: 10px; border-radius: 10px; background-color: #FFFFFF; max-width: 600px;">
            <h2>@Model.CheckPoint.Title</h2>
            <p style="text-align: left;">@Model.CheckPoint.Description</p>
            @if (!string.IsNullOrWhiteSpace(Model.CheckPoint.Image))
            {
                <img src="@Model.CheckPoint.Image" alt="@Model.CheckPoint.Title" style="width: 100%; height: auto;" />
            }
            <p style="text-align: left;">Milestone Distance: @Model.CheckPoint.DistanceInKilometers.ToString("F1") kilometres</p>
            <p style="text-align: left;">
                Links:
                <a href="http://www.google.com/maps/place/@Model.CheckPoint.Latitude,@Model.CheckPoint.Longitude?zoom=1" target="_blank">Milestone in Google Maps</a>
                @if (!string.IsNullOrWhiteSpace(Model.CheckPoint.Url))
                {
                    <a href="@Model.CheckPoint.Url" target="_blank">Milestone Website</a>
                }
            </p>
        </div>
        <div style="padding: 20px 5% 20px 5%; margin-bottom: 10px; border-radius: 10px; background-color: #FFFFFF; max-width: 600px;">
            <h2>Celebrate Your Achievement</h2>
            <p style="text-align: left;">Thank you muchly for supporting <a href="https://www.rollergirlgang.co.uk/about-us" target="_blank">Roller Girl Gang</a> and for being a part of our virtual skate marathon. &#10084; &#128764; &#128764;</p>
            <p style="text-align: left;">We're pretty impressed with you right now and you're definitely part of our Gangster Skate Crew! (You already were, we just want to make sure you knew).</p>
            <p style="text-align: left;">
                Lots of love<br/>
                Roller Girl Gang<br />
                xoxo
            </p>
        </div>
    </center>
</body>
</html>