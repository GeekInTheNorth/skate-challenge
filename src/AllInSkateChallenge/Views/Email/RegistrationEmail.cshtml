@model AllInSkateChallenge.Features.Skater.Registration.RegistrationEmailModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Skater Registration</title>
</head>
<body style="font-family: Arial, Helvetica, sans-serif; margin: 0; background-color: #9d5feb; padding: 10px;">
    <center>
        <div style="padding: 20px 5% 20px 5%; margin-bottom: 10px; border-radius: 10px; background-color: #FFFFFF; max-width: 600px;">
            <img src="@Model.LogoUrl" alt="ALL IN Logo" style="width: 100%; max-width: 600px; height: auto;" />
        </div>
        <div style="padding: 20px 5% 20px 5%; margin-bottom: 10px; border-radius: 10px; background-color: #FFFFFF; max-width: 600px;">
            <h1>Welcome to the Leeds Basin, the starting point of the Leeds-Liverpool Canal ALL IN Skate Challenge!</h1>
            @if (!string.IsNullOrWhiteSpace(Model.StartingPostCard))
            {
                <img src="@Model.StartingPostCard" alt="Leeds Basin" style="width: 100%; height: auto;" />
            }
        </div>
        <div style="padding: 20px 5% 20px 5%; margin-bottom: 10px; border-radius: 10px; background-color: #FFFFFF; max-width: 600px; text-align: left;">
            <p>Here's some info to get you started!</p>
            <ol>
                <li>
                    <span>Make sure you have confirmed your email address by visiting this <a href="@Model.EmailConfirmationUrl">Confirmation Page</a></span>
                </li>
                <li>
                    <span>Make sure you've joined our <a href="https://www.facebook.com/groups/3257681721008087/">Facebook Group</a>! This is a great place to share your progress and help celebrate others' successes. You can even add our Facebook frame to let folks know you've taken on the <a href="@Model.SiteUrl">challenge</a>.</span>
                </li>

                <li>Log your <a href="@Model.LogMilesUrl">first miles</a>. Make sure you skate safe! Carry a skate tool with you, let folks know you're out and about, and follow your local COVID guidelines.</li>
            </ol>
        </div>
    </center>
</body>
</html>